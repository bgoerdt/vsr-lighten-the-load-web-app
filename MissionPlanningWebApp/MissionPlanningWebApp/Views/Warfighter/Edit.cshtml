@model MissionPlanningWebApp.Models.Warfighter
@using MissionPlanningWebApp.Models

@{
    ViewBag.Title = "Edit";
	ICollection<WarfighterCharacteristic> WarfighterCharacteristics = Model.WarfighterCharacteristics;
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Warfighter</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        @foreach (var chr in WarfighterCharacteristics)
        {
            <input type="text" class="quantity" value="@chr.CharValue">
        }
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
