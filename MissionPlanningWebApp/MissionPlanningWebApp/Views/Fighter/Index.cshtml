    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @*@foreach (var chr in item.FighterCharacteristics as List<MissionPlanningWebApp.Models.FighterCharacteristic>)
        {
            <td>@Html.DisplayFor(c => chr.CharValue)</td>
        }*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
